<p id="notice"></p>

<h1>Books</h1>

<table>
  <thead>
   <tr>
    <th>Title</th>
    <th>Body</th>
    <th colspan="3"></th>
   </tr>
  </thead>
  <tbody>
   <% @books.each do |list| %>
    <tr>
     <td><%= list.title %></td>
     <td><%= list.body %></td>
     <td><%= link_to "Show", book_path(list.id) %></td>
     <td><%= link_to "Edit", edit_book_path(list.id) %></td>
     <td><%= link_to "Destroy", book_path(list.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
    </tr>
   <% end %>
  </tbody>
</table>


<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url:'/books', method: :post do |f| %>
  <div>
  <label>Title</label>
  </div>
  <%= f.text_field :title %>
  <div>
  <label>Body</label>
  </div>
  <div>
  <%= f.text_area :body %>
  </div>
  <%= f.submit 'Create Book' %>

<% end %>